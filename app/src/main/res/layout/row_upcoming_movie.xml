<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    android:background="@drawable/primary_selector"
    android:orientation="horizontal"
    android:padding="6dp">

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="136dp">

        <ImageView
            android:id="@+id/iv_row_upcoming_movie_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RatingBar
            android:id="@+id/rb_row_upcoming_movie_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent_white"
            android:isIndicator="true"
            android:numStars="5"
            android:padding="6dp" />
    </RelativeLayout>

    <Space
        android:layout_width="6dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="Title" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <TextView
            android:id="@+id/tv_release_date"
            style="@style/custom_secondary_info_grey"
            tools:text="Release Date: 12-31-2016" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <TextView
            android:id="@+id/tv_rating"
            style="@style/custom_secondary_info_grey" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <TextView
            android:id="@+id/tv_age_group"
            style="@style/custom_secondary_info_grey" />
    </LinearLayout>
</LinearLayout>